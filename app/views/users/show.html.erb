<div class="usersindex">
  <h2><strong>User info</strong></h2>
   <%= render 'users/profile', user: @user %>
</div>

<div class="booksform">
  <h2><strong>New book</strong></h2>
  <%= render 'books/form',book: @book %>
</div

<div class="booklist">
 <h2><strong>Books</strong></h2>
  <table>
   <thead>
     <tr>
         <th>Title</th>
         <th>Opinion</th>
         <!--<th colspan="2"></th>-->
     </tr>
     <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
   </thead>
  </table>
 </div>