
<div class="px-5">
  <div class='row'>
    <div class='col-md-3'>
      <p style="color:green;"><%= flash[:success] %></p>
      <h2>User info</h2>
      <tr><img class="attachment user profile_image fallback"/>
       <%= render 'users/profile',user: @book.user %>
      </tr>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form',book: Book.new %>
     </div>

     <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
       <table class='table table-hover table-inverse'>
        <thead>
     <tr>
       <td>
        <%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg", size:"60x60" %><br>
        <%= link_to @book.user.name, user_path(@book.user) %>
        </td>
        <td><%= link_to @book.title,book_path(@book) %></td>
       <td><%= @book.body %></td>
       <% if @book.user == @user %>
       <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success"%></td>
       <td><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %></td>
      <% end %>
     </tr>
    </thead>
    </table>
     </div>
    </div>
   </div>
<footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>